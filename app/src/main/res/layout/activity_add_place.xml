<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlace">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:weightSum="2">
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="123"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="60dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/monthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="279dp"
            tools:layout_editor_absoluteY="143dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp">
        <TextView
            android:id="@+id/area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/addressE"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:hint="[주소입력]"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressE"
            android:layout_marginTop="50dp"
            app:srcCompat="@android:mipmap/sym_def_app_icon" />
        <EditText
            android:id="@+id/nameE"
            android:layout_below="@id/imageView"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="이름"/>
        <TextView
            android:id="@+id/costT"
            android:layout_below="@id/nameE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="사용금액:"/>
        <EditText
            android:id="@+id/costE"
            android:layout_toRightOf="@id/costT"
            android:layout_alignBottom="@id/costT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/contentT"
            android:layout_below="@id/costT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="내용:"/>
        <EditText
            android:id="@+id/contentE"
            android:layout_toRightOf="@id/contentT"
            android:layout_alignBottom="@id/contentT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/deleteB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/saveB"
            android:onClick="delete"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:visibility="invisible"
            android:text="삭제"/>

        <Button
            android:id="@+id/saveB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:onClick="insert"
            android:text="저장" />
        <Button
            android:id="@+id/editB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:visibility="invisible"
            android:onClick="edit"
            android:text="수정"/>

    </RelativeLayout>

</RelativeLayout>